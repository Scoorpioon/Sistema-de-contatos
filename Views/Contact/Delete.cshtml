@{
    ViewData["Title"] = "Delect a contact";
}

<div class="text-center">
    <h3>Are you sure you want to delete the contact [name]?</h3>
</div>

<div class="btn-group-vertical justify-content-center w-100">
    <a role="button" class="btn btn-danger w-50" asp-controller="Contact" asp-action="DeleteContact">Delete contact</a>
    <a role="button" class="btn btn-secondary w-50" asp-controller="Contact" asp-action="Index">Cancel</a>
</div>